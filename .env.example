# =============================================================
# NEXXI - Environment Variables Template
# SAFE TO COMMIT — contains NO real credentials
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# =============================================================

# ── Hugging Face ──────────────────────────────────────────────
HF_TOKEN=your_huggingface_token_here
HF_MODEL_NAME=HuggingFaceH4/zephyr-7b-beta
# Other reliable free alternatives:
# HF_MODEL_NAME=Qwen/Qwen2.5-7B-Instruct
# HF_MODEL_NAME=TinyLlama/TinyLlama-1.1B-Chat-v1.0
# HF_MODEL_NAME=microsoft/Phi-3.5-mini-instruct

# ── Application ───────────────────────────────────────────────
CHATBOT_NAME=Nexxi
APP_ENV=development          # development | staging | production
APP_SECRET_KEY=your_secret_key_here_min_32_chars
API_KEY=your_api_key_here

# ── Database & Cache ──────────────────────────────────────────
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://user:password@localhost:5432/nexxi_db

# ── Monitoring ────────────────────────────────────────────────
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO               # DEBUG | INFO | WARNING | ERROR | CRITICAL
